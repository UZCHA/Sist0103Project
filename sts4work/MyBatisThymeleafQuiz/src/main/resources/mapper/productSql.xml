<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="product.mapper.ProductMapper">
	<insert id="insertProduct" parameterType="ProductDto">
		insert into product (pro_name,pro_color,pro_price,pro_image,pro_create_date) values(#{pro_name},#{pro_color},#{pro_price},#{pro_image},now())
	</insert>
	
	<select id="getTotalProduct" resultType="int">
		select count(*) from product
	</select>
	
	<select id="getAllProduct" resultType="ProductDto">
		select * from product order by pro_num
	</select>
	
	<select id="getData" resultType="ProductDto" parameterType="int">
		select * from product where pro_num=#{pro_num}
	</select>
</mapper>